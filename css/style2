/* Media Query for Tablets */
@media screen and (min-width: 48rem) { /* 768px */
    html {
        font-size: 1.125rem; /* 18px */
    }
}

/* Media Query for Laptops/Desktops */
@media screen and (min-width: 64rem) { /* 1024px */
    html {
        font-size: 1.25rem; /* 20px */
    }

    .logo {
        font-size: 2rem; /* 32px */
    }

    .home h3 {
